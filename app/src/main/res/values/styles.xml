<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="required">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:fontFamily">@font/roboto_mono_italic</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="require" parent="required">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:clickable">true</item>
        <item name="android:contextClickable">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorLink">#E92CEF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>