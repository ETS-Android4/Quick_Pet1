<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="required">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:fontFamily">@font/roboto_mono_italic</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="require" parent="required">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:clickable">true</item>
        <item name="android:contextClickable">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorLink">#E92CEF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="label">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_mono_italic</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="label1" parent="label">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_mono_italic</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--material.appbar.MaterialToolbar-->
    <style name="myMenu" parent="Theme.Quick_Pet">
        <item name="android:background">@drawable/pop_menu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>